{
  "id": { "type": "string", "description": "UUID generated identifier" },
  "name": { "type": "string", "description": "Unique plant name" },
  "plantType": { "type": "string", "options": ["plant","flower","bamboo","shrub","tree"], "description": "Primary plant category" },
  "utility": { "type": "array", "items": "string", "options": ["comestible","ornemental","produce_fruit","aromatic","medicinal","odorous","climbing","cereal","spice"], "description": "All utilities that apply" },
  "comestiblePart": { "type": "array", "items": "string", "options": ["flower","fruit","seed","leaf","stem","root","bulb","bark","wood"], "description": "Edible parts (only if comestible)" },
  "fruitType": { "type": "array", "items": "string", "options": ["nut","seed","stone"], "description": "Fruit category (only if produce_fruit)" },
  "images": {
    "type": "array",
    "description": "Photos attached to the plant",
    "items": {
      "type": "object",
      "properties": {
        "link": { "type": "string", "description": "Image URL" },
        "use": { "type": "string", "options": ["primary","discovery","other"], "description": "Role of this image" }
      }
    }
  },
  "identity": {
    "type": "object",
    "properties": {
      "givenNames": { "type": "array", "items": "string", "description": "Common names" },
      "scientificName": { "type": "string", "description": "Scientific name" },
      "family": { "type": "string", "description": "Botanical family" },
      "overview": { "type": "string", "description": "Long description and presentation" },
      "promotionMonth": { "type": "integer", "description": "Month for promotion (1-12)" },
      "lifeCycle": { "type": "string", "options": ["Annual","Biennials","Perenials","Ephemerals","Monocarpic","Polycarpic"], "description": "Lifecycle" },
      "season": { "type": "array", "items": "string", "options": ["Spring","Summer","Autumn","Winter"], "description": "Seasons where plant is active" },
      "foliagePersistance": { "type": "string", "options": ["Deciduous","Evergreen","Semi-Evergreen","Marcescent"], "description": "Leaf persistence" },
      "spiked": { "type": "boolean", "description": "Has spikes" },
      "toxicityHuman": { "type": "string", "options": ["Non-Toxic","Midly Irritating","Highly Toxic","Lethally Toxic"], "description": "Human toxicity" },
      "toxicityPets": { "type": "string", "options": ["Non-Toxic","Midly Irritating","Highly Toxic","Lethally Toxic"], "description": "Pet toxicity" },
      "allergens": { "type": "array", "items": "string", "description": "Possible allergens" },
      "colors": { "type": "array", "items": { "name": {"type":"string"}, "hexCode": {"type":"string"} }, "description": "Palette from color table" },
      "scent": { "type": "boolean", "description": "Has scent" },
      "symbolism": { "type": "array", "items": "string", "description": "Symbolism tags" },
      "livingSpace": { "type": "string", "options": ["Indoor","Outdoor","Both"], "description": "Where the plant can live" },
      "composition": { "type": "array", "items": "string", "options": ["Flowerbed","Path","Hedge","Ground Cover","Pot"], "description": "Landscape composition options" },
      "maintenanceLevel": { "type": "string", "options": ["None","Low","Moderate","Heavy"], "description": "Care effort" }
    }
  },
  "plantCare": {
    "type": "object",
    "properties": {
      "origin": { "type": "array", "items": "string", "description": "Where the plant originates" },
      "habitat": { "type": "array", "items": "string", "options": ["Aquatic","Semi-Aquatic","Wetland","Tropical","Temperate","Arid","Mediterranean","Mountain","Grassland","Forest","Coastal","Urban"], "description": "Habitats" },
      "temperatureMax": { "type": "number", "description": "Maximum temperature tolerance" },
      "temperatureMin": { "type": "number", "description": "Minimum temperature tolerance" },
      "temperatureIdeal": { "type": "number", "description": "Ideal temperature" },
      "levelSun": { "type": "string", "options": ["Low Light","Shade","Partial Sun","Full Sun"], "description": "Sun exposure" },
      "hygrometry": { "type": "number", "description": "Ideal humidity percentage" },
      "watering": { "type": "object", "properties": { "season": {"type":"string"}, "quantity": {"type":"string"}, "timePeriod": {"type":"string","options":["week","month","year"]} }, "description": "Watering plan" },
      "wateringType": { "type": "array", "items": "string", "options": ["surface","buried","hose","drop","drench"], "description": "Watering methods" },
      "division": { "type": "array", "items": "string", "options": ["Seed","Cutting","Division","Layering","Grafting","Tissue Separation","Bulb separation"], "description": "Propagation methods" },
      "soil": { "type": "array", "items": "string", "options": ["Vermiculite","Perlite","Sphagnum moss","rock wool","Sand","Gravel","Potting Soil","Peat","Clay pebbles","coconut fiber","Bark","Wood Chips"], "description": "Accepted soils" },
      "adviceSoil": { "type": "string", "description": "Soil advice" },
      "mulching": { "type": "array", "items": "string", "options": ["Wood Chips","Bark","Green Manure","Cocoa Bean Hulls","Buckwheat Hulls","Cereal Straw","Hemp Straw","Woven Fabric","Pozzolana","Crushed Slate","Clay Pellets"], "description": "Mulching options" },
      "adviceMulching": { "type": "string", "description": "Mulching advice" },
      "nutritionNeed": { "type": "array", "items": "string", "options": ["Nitrogen","Phosphorus","Potassium","Calcium","Magnesium","Sulfur","Iron","Boron","Manganese","Molybene","Chlorine","Copper","Zinc","Nitrate","Phosphate"], "description": "Nutrient focus" },
      "fertilizer": { "type": "array", "items": "string", "options": ["Granular fertilizer","Liquid Fertilizer","Meat Flour","Fish flour","Crushed bones","Crushed Horns","Slurry","Manure","Animal excrement","Sea Fertilizer","Yurals","Wine","guano","Coffee Grounds","Banana peel","Eggshell","Vegetable cooking water","Urine","Grass Clippings","Vegetable Waste","Natural Mulch"], "description": "Fertilizer choices" },
      "adviceFertilizer": { "type": "string", "description": "Fertilizer advice" }
    }
  },
  "growth": {
    "type": "object",
    "properties": {
      "sowingMonth": { "type": "array", "items": "integer", "description": "Months to sow" },
      "floweringMonth": { "type": "array", "items": "integer", "description": "Months of flowering" },
      "fruitingMonth": { "type": "array", "items": "integer", "description": "Months of fruiting" },
      "height": { "type": "number", "description": "Average height (cm)" },
      "wingspan": { "type": "number", "description": "Average spread (cm)" },
      "tutoring": { "type": "boolean", "description": "Needs tutor/stake" },
      "adviceTutoring": { "type": "string", "description": "Tutoring advice" },
      "sowType": { "type": "array", "items": "string", "options": ["Direct","Indoor","Row","Hill","Broadcast","Seed Tray","Cell","Pot"], "description": "Sowing formats" },
      "separation": { "type": "number", "description": "Spacing in cm" },
      "transplanting": { "type": "boolean", "description": "Requires transplanting" },
      "adviceSowing": { "type": "string", "description": "Planting advice" },
      "cut": { "type": "string", "description": "Type of cut/pruning" }
    }
  },
  "usage": {
    "type": "object",
    "properties": {
      "adviceMedicinal": { "type": "string", "description": "Medicinal notes" },
      "nutritionalIntake": { "type": "array", "items": "string", "description": "Nutrient tags" },
      "infusion": { "type": "boolean", "description": "Usable for infusion" },
      "adviceInfusion": { "type": "string", "description": "Infusion advice" },
      "infusionMix": { "type": "object", "additionalProperties": "string", "description": "Blend name to benefit mapping" },
      "recipesIdeas": { "type": "array", "items": "string", "description": "Recipe ideas" },
      "aromatherapy": { "type": "boolean", "description": "Supports essential oils" },
      "spiceMixes": { "type": "array", "items": "string", "description": "Spice mix names" }
    }
  },
  "ecology": {
    "type": "object",
    "properties": {
      "melliferous": { "type": "boolean", "description": "Good for pollinators" },
      "polenizer": { "type": "array", "items": "string", "options": ["Bee","Wasp","Ant","Butterfly","Bird","Mosquito","Fly","Beetle","ladybug","Stagbeetle","Cockchafer","dungbeetle","weevil"], "description": "Pollinator types" },
      "beFertilizer": { "type": "boolean", "description": "Acts as fertilizer for others" },
      "groundEffect": { "type": "string", "description": "Effect on ground" },
      "conservationStatus": { "type": "string", "options": ["Safe","At Risk","Vulnerable","Endangered","Critically Endangered","Extinct"], "description": "Conservation status" }
    }
  },
  "danger": {
    "type": "object",
    "properties": {
      "pests": { "type": "array", "items": "string", "description": "Pest list" },
      "diseases": { "type": "array", "items": "string", "description": "Diseases" }
    }
  },
  "miscellaneous": {
    "type": "object",
    "properties": {
      "companions": { "type": "array", "items": "string", "description": "Linked companion plant IDs" },
      "tags": { "type": "array", "items": "string", "description": "Search tags" },
      "source": { "type": "object", "properties": { "name": {"type":"string"}, "url": {"type":"string"} }, "description": "Source reference" }
    }
  },
  "meta": {
    "type": "object",
    "properties": {
      "status": { "type": "string", "options": ["In Progres","Rework","Review","Approved"], "description": "Record status" },
      "adminCommentary": { "type": "string", "description": "Moderator notes" },
      "createdBy": { "type": "string", "description": "Author name" },
      "createdTime": { "type": "string", "description": "Creation time" },
      "updatedBy": { "type": "string", "description": "Last editor" },
      "updatedTime": { "type": "string", "description": "Update time" }
    }
  }
}
